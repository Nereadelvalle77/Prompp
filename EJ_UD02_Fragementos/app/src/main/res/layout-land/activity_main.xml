<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLaLaLii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/lalalii"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtLaLaLii"
        >

        <fragment
            android:id="@+id/frgLista"
            class="com.example.fragmentos.FragmentLista"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            />

        <fragment
            android:id="@+id/frgDescripcion"
            class="com.example.fragmentos.FragmentDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>